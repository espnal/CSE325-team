@page "/404"

<div class="container my-5 notfound-container">
    <div class="row align-items-center g-4">
        <!-- Left side: Text -->
        <div class="col-md-5 text-center text-md-start">
            <h1 class="notfound-code">404</h1>
            <h2 class="fw-semibold mb-3">Page not found</h2>
            <p class="text-secondary mb-4">
                The page you're looking for may have moved or no longer exists.
            </p>
            <div class="d-flex gap-2 justify-content-center justify-content-md-start">
                <NavLink href="/" class="btn btn-primary btn-lg">Back Home</NavLink>
                <NavLink href="/inventory" class="btn btn-outline-secondary btn-lg">Go to Inventory</NavLink>
            </div>
        </div>

        <!-- Right side: Image -->
        <div class="col-md-7 text-center">
            <img src="/images/404-image.png" alt="Car illustration" class="img-fluid notfound-image">
        </div>
    </div>
</div>
