@page "/bookings/list"
@inject CSE325_team.Data.ApplicationDbContext Db
@inject AuthenticationStateProvider AuthProvider

@using CSE325_team.Models
@using Microsoft.EntityFrameworkCore

<h3>Mis Reservas</h3>

@if (bookings == null)
{
    <p>Cargando...</p>
}
else if (!bookings.Any())
{
    <p>No tienes reservas.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Veh√≠culo</th>
                <th>Recogida</th>
                <th>Entrega</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in bookings)
            {
                <tr>
                    <td>@b.Vehicle?.Make @b.Vehicle?.Model (@b.Vehicle?.Year)</td>
                    <td>@b.PickupDate.ToShortDateString()</td>
                    <td>@b.DropOffDate.ToShortDateString()</td>
                    <td>$@b.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Booking> bookings = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity.IsAuthenticated)
        {
            var userIdClaim = user.FindFirst("sub")?.Value ?? user.Identity.Name;
            // Si UserId es int, debes convertirlo:
            bookings = await Db.Bookings
                .Include(b => b.Vehicle)
                .Where(b => b.UserId.ToString() == userIdClaim)
                .ToListAsync();
        }
        else
        {
            bookings = new List<Booking>();
        }
    }
}