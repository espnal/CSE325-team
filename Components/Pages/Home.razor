@page "/"
<PageTitle>Home</PageTitle>

<!-- Hero Section -->
<div class="hero-container">
    <img src="images/hero-img.png" alt="Car rental hero image" class="hero-image" />
    <div class="hero-text">
        <h1>Book. Drive. Explore.</h1>
        <p>Rent quality cars quickly and easily.</p>
        <a href="Account/Register" class="btn btn-primary">Get Started</a>
    </div>
</div>

<!-- Getting Started Steps -->
<section class="how-it-works">
    <h2>Getting Started is Easy</h2>
    <div class="steps">
        <div class="step">
            <span class="step-number">1</span>
            <h3>Create an Account</h3>
            <p>Sign up with your info so we know who you are.</p>
        </div>
        <div class="step">
            <span class="step-number">2</span>
            <h3>Verify & Upload</h3>
            <p>Add your license and insurance to get approved fast.</p>
        </div>
        <div class="step">
            <span class="step-number">3</span>
            <h3>Book a Car</h3>
            <p>Browse inventory, choose your ride, and lock it in.</p>
        </div>
        <div class="step">
            <span class="step-number">4</span>
            <h3>Drive & Go</h3>
            <p>Pick up your car and hit the road. That’s it.</p>
        </div>
    </div>
</section>

<!-- Featured Inventory Mockup -->
<section class="featured-inventory">
    <h2>Featured Vehicles (slideshow? idk)</h2>
    <div class="inventory-cards">
        <div class="inventory-card">
            <img src="images/car1.jpg" alt="Sedan" />
            <h3>Sleek Sedan</h3>
            <p>Comfortable and efficient for city drives.</p>
        </div>
        <div class="inventory-card">
            <img src="images/car2.jpg" alt="SUV" />
            <h3>Reliable SUV</h3>
            <p>Spacious for road trips and family getaways.</p>
        </div>
        <div class="inventory-card">
            <img src="images/car3.jpg" alt="Convertible" />
            <h3>Cool Convertible</h3>
            <p>Top-down freedom for sunny weekends.</p>
        </div>
        <div class="inventory-card">
            <img src="images/car4.jpg" alt="Motorcycle" />
            <h3>Motorcycle</h3>
            <p>Top-down freedom for sunny weekends.</p>
        </div>
    </div>
</section>