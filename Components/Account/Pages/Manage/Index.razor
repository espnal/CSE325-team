        if (Input is null) 
        {
            Input = new InputModel{
                FirstName = _currentUser?.FirstName,
                LastName = _currentUser?.LastName,
                PhoneNumber = _currentUser?.PhoneNumber,
                AltPhoneNumber = _currentContact?.AltPhoneNumber,
                StreetLine1 = _currentContact?.StreetLine1,
                StreetLine2 = _currentContact?.StreetLine2,
                City = _currentContact?.City,
                State = _currentContact?.State,
                PostalCode = _currentContact?.PostalCode
            };
        }
        _initialized = true;
    }

